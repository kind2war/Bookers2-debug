<%= form_with model: [book, book_comment], local: false do |f| %> <!--local: false 非同期通信-->
  <div class="form-group">
    <% f.label :comment %>
    <%= f.text_area :comment, placeholder: "コメントをここに", class: 'form-control book_comment' %>
    <%= f.submit "送信", class: 'btn btn-success' %>
  </div>
<% end %>
