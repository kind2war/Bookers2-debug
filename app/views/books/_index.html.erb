<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tag</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image ,size:'100x100'%>
          <% end %>
        </td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body.truncate(20, omission:"") %></td>
        <td><%= book.tag %></td>
        <td  id="fav_btn_<%= book.id %>">
          <%= render 'favorites/fav', book: book %>
        </td>
        <td><%= link_to "コメント数: #{book.book_comments.count}" ,book_path(book.id) %> </td>
        <td><%= render "books/static.rate", book: book %></td>
        <td><% book.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>