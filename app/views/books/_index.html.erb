<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th style="width: 20%">Title</th>
      <th style="width: 35%">Opinion</th>
      <th colspan="3" style="width: 30%"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image ,size:'100x100'%>
          <% end %>
        </td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
        <td><%= render 'favorites/fav', book: book %></td>
        <td><%= link_to "コメント数: #{book.book_comments.count}" ,book_path(book.id) %> </td>
      </tr>
    <% end %>
  </tbody>
</table>