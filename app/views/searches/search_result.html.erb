<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <table class='table table-hover table-inverse'>
        <!--検索対象モデルがUserの時 -->
        <% if @range == "User" %>
        <h2>Book search for <%= '"' + @keyword +  '"' %></h2>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <th style="width: 10%"></th>
                <th style="width: 90%">Name</th>
              </tr>
              <tr>
                <td><%= image_tag user.get_profile_image, size:"100x100" %></td>
                <td><%= link_to user.name, user %></td>
              </tr>
            <% end %>
              <% if @users.count == 0 %>
                <p>データが見つかりません</p>
              <% end %>
          </tbody>
        <% elsif %>
          <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
          <h2>Book search for <%= '"' + @keyword +  '"' %></h2>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <th style="width: 20%"></th>
              <th style="width: 30%">Title</th>
              <th style="width: 50%">Opinion</th>
            </tr>
              <tr>
                <td><%= image_tag book.user.get_profile_image, size:"100x100" %>
                    <%= book.user.name %></td>
                <td><%= link_to book.title,book %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
              <% if @books.count == 0 %>
                <p>データが見つかりません。</p>
              <% end %>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>