<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <table class='table table-hover table-inverse'>
        <h2>Book search for <%#= '"' + @keyword +  '"' %></h2>
        <tbody>
          <tr>
            <th style="width: 20%"></th>
            <th style="width: 30%">Title</th>
            <th style="width: 50%">Opinion</th>
          </tr>
            <tr>
                <% @books.each do |book| %>
              <td><%= image_tag book.user.get_profile_image, size:"100x100" %>
                  <%= book.user.name %></td>
              <td><%= link_to book.title,book %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
            <% if @books.count == 0 %>
              <p>データが見つかりません。</p>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>