<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= render 'users/follows', user: @user %></th>
  </tr>
  <tr>
  <th>followers</th>
  <th><%= render 'users/followers', user: @user %></th>
  </tr>
</table>

<div class='row'>
  <%= render 'users/follow_form', user: @user if !(@user == current_user)%>
  <% if @user == current_user %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block"  do, if @user == current_user %>
      <i class="fas fa-user-cog"></i>
    <%end%>
  <%end%>
</div>